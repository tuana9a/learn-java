<?xml version="1.0" encoding="UTF-8"?>
<beans
        xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
   http://www.springframework.org/schema/context
   http://www.springframework.org/schema/context/spring-context-3.0.xsd"
>
    <context:component-scan base-package="com.gemdino.learnspring"/>

    <bean id="car" class="com.tuana9a.learn.java.spring.model.Car">
        <property name="tyre" ref="tyre"/>
    </bean>

    <bean id="car1" class="com.tuana9a.learn.java.spring.model.Car">
        <constructor-arg value="Honda Lead 1000"/>
    </bean>

    <bean id="tyre" class="com.tuana9a.learn.java.spring.model.Tyre">
        <property name="brand" value="Honda"/>
    </bean>

    <bean id="tyre1" class="com.tuana9a.learn.java.spring.model.Tyre">
        <property name="brand" value="Honda"/>
    </bean>

    <bean id="tyre2" class="com.tuana9a.learn.java.spring.model.Tyre">
        <property name="brand" value="Lamborghini"/>
    </bean>

</beans>